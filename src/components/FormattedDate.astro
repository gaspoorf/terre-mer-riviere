---
interface Props {
	date: Date;
}

const { date } = Astro.props;

const utcDate = new Date(Date.UTC(date.getFullYear(), date.getMonth(), date.getDate()));

---

<time datetime={utcDate.toISOString()}>
	{
		utcDate.toLocaleDateString('fr', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
