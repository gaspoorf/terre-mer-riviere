<div class="footer-block">

    <div class="footer-container">
        <div class="footer-col">
            <p class="title">{title}</p>
            <p class="text">{text}</p>
            <p>{caption}</p>
        </div>

        <div class="footer-col">
            <a href={`mailto:${mail}`}>{mail}</a>
            
