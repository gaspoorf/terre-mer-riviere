---
const { title, image, text } = Astro.props;

---
<section class="sky">
    <div class="sky-content">
        <div class="title-content">
            <h1 class="title-split" set:html={title}></h1>
        </div>
    </div>

    <img src="/cloud-1.png" class="cloud-1" alt="">

    <img src="/cloud-2.png" class="cloud-2" alt="">


    <div class="first-block">
        <img src={image} alt={title} class="main-img"/>
       
        <div class="first-content">
            <p class="text-split">{text}</p>
        </div>
    </div>
</section>

<script>
  import { initPageAnimations } from '../scripts/animations.js';
 
  document.addEventListener('DOMContentLoaded', () => {
    initPageAnimations();
  });
</script>

<style>

    .title-split{
        opacity: 0;
    }

    .sky {
        /* background-color: #c2e6f4; */
        background-color: #9fd0e3;
    }

    .sky-content {
        width: 100vw;
        height: 50rem;
        z-index: 0;
        position: relative;
    }

    
	.first-block {
        position: relative;
		height: 100vh;
        width: 100vw;
	}

    .cloud-1,
    .cloud-2 {
        transform: translateZ(0);
        backface-visibility: hidden;
    }

    .cloud-1{
        opacity: 0.8;
        width: 100%;
        height: 140%;
        position: absolute;
        top: 25rem;
        left: 0;
    }

    .cloud-2{
        opacity: 0;
        width: 100%;
        height: auto;
        position: absolute;
        top: 23rem;
        left: 0;
        z-index: 1;
    }

    .first-content,
    .title-content{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: #F4F6E1;
        width: fit-content;
        height: fit-content;
        z-index: 1;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .first-content{
        line-height: 38px;
        width: 500px;
        top: auto;
        bottom: 7rem;
    }
    
    .title-content{
        white-space: nowrap;
        position: fixed;
    }



    img{
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

    @media screen and (max-width: 1250px) {
        .first-block img{
            height: auto;
            bottom: 0
        }
    }

    @media screen and (max-width: 768px) {
        .sky-content {
            height: 100vh;
        }

        .cloud-1{
            top: 20rem;
            left: 0;
        }

        .cloud-2{
            top: auto;
            bottom: -5rem;
        }

        .title-content {
            top: 50%;
            font-size: 1.5rem;
            white-space: wrap;
            min-width: 330px;
        }

        .first-content {
            width: 400px;
            top: auto;
            bottom: 0;
        }

        h1{
            font-size: 4rem;
            line-height: 4rem;
        }

        :global(.title-content span) {
            display: none !important;
        }

        .first-block{
            overflow: hidden;
            height: 70vh;
            min-height: 45rem;
        }

        .first-block img{
            width: 300%;
            max-height: 610px;;
        }
        
    }


    @media screen and (max-width: 430px) {
        .first-content {
            width: 300px;
        }
    }
</style>