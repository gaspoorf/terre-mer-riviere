---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

import { getEntry } from 'astro:content';

const home = await getEntry('home', 'index');
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const footer = home?.data.footer ?? [];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>

			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0 auto;
				margin-bottom: 10rem;
			}

			.heading {
				text-align: center;
				margin: 10rem 0 4rem 0;
			}

			.heading h1 {
				font-size: 5.5rem;
				line-height: 75px;
				opacity: 0;
			}

			@media (max-width: 720px){
				.heading {
					margin: 6rem 0 2rem 0;
				}


				.heading h1 {
					font-size: 3rem;
				}

				.heading p{
					font-size: 1.3rem;
					line-height: 25px;
				}
			}

			ul {
				display: grid;
				grid-template-columns: 1fr 1fr 1fr;
				gap: 2rem;
				list-style-type: none;
				padding: 0;
				width: fit-content;
				margin: 0 auto;
			}

			ul li * {
				text-decoration: none;
			}


			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}

			li{ 
				height: 100%;
				width: auto;
				list-style: none;
				overflow: hidden;
				position: relative;
				width: 20rem;
			}


			li a img{
				width: 100%;
				height: 100%;
				position: absolute;
				object-fit: cover;
			}

			@media (max-width: 1060px) {
				ul{
					grid-template-columns: 1fr 1fr;
				}
			}

			@media (max-width: 720px) {
				ul{
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<script>
			import "../../scripts/lenis-init.js";
			import { initPageAnimations } from '../../scripts/animations.js';
 
			document.addEventListener('DOMContentLoaded', () => {
				initPageAnimations();
			});
		</script>
		<Header />
		<main>
			<section>
				<div class="heading">
					<h1 class="title-split">Actualités</h1>
					<p>Retrouvez ici toutes les actualités de Terre Mer Rivière !</p>
				</div>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`} class="post-tile">
									<div class="tile-head">
										<img src={post.data.heroImage} alt="" />
									</div>
									<div class="tile-body">
										<h4 class="title">{post.data.title}</h4>
										<p class="description">{post.data.description}</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		{footer.map((footer) => (
			<Footer
				title={footer.title}
				text={footer.text}
				caption={footer.caption}
				mail={footer.mail}
			/>
		))}
	</body>
</html>
