---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
// import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import InfoBlock from '../components/InfoBlock.astro';
import FirstBlock from '../components/FirstBlock.astro';
import Footer from '../components/Footer.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import { getEntry } from 'astro:content';



const home = await getEntry('home', 'index');
const first = home?.data.first ?? [];
const blocks = home?.data.blocks ?? [];
const contact = home?.data.contact ?? [];
const footer = home?.data.footer ?? [];
---

<!doctype html>
<html lang="fr">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  
  <body>
    <!-- <Header /> -->

    <main>
		{first.map((first) => (
			<FirstBlock
				title={first.title}
				image={first.image}
				text={first.text}
			/>
		))}

		{blocks.map((block) => (
			<InfoBlock
				title={block.title}
				image={block.image}
				svg={block.svg}
				text={block.text}
				color={block.color}
				lines={block.lines}
			/>
		))}

		<!-- {contact.map((contact) => (
			<Contact
				title={contact.title}
				image={contact.image}
				text={contact.text}
			/>
		))} -->
    </main>

	{footer.map((footer) => (
		<Footer
			title={footer.title}
			text={footer.text}
			caption={footer.caption}
			mail={footer.mail}
		/>
	))}

	 <script type="module">
      import { setupLenis } from '../scripts/lenis.js';
      document.addEventListener('DOMContentLoaded', () => {
        setupLenis();
      });
    </script>
  </body>
</html>
